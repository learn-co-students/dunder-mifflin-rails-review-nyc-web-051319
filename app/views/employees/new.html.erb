<h1> Create New Employee </h1>

<%if flash[:message] %>
  <h2><%=flash[:message]%></h2>
<%end%>

<h2> Create Form </h2>

<%=form_for @employee do |f|%>
<%=f.label "Employee First Name"%>
<%=f.text_field :first_name%>
<%=f.label "Employee Last Name" %>
<%=f.text_field :last_name%>
<%=f.label "Alias" %>
<%=f.text_field :alias%>
<%=f.label "Title"%>
<%=f.text_field :title%>
<%=f.label "Office"%>
<%=f.text_field :office%>
<%=f.label "Image"%>
<%=f.text_field :img_url%>
<%=f.collection_select(:dog_id, Dog.all, :id, :name, prompt: true) %>
<%=f.submit%>
<%end%>
