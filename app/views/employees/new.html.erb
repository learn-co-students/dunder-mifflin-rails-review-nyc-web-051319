<h1>New Employee</h1>

<%if flash[:message] %>
  <h3 class="alert alert-danger" role="alert"><%=flash[:message] %></h3>
<%end%>

<%= form_for @employee do |f| %>
<div class="form-row">
  <div class="col-md-auto">
<%= f.label :first_name %>
<%= f.text_field :first_name, class: "form-control" %></div>
  <div class="col-md-auto">
<%= f.label :last_name %>
<%= f.text_field :last_name, class: "form-control" %></div>
  <div class="col-md-auto">
<%= f.label :alias %>
<%= f.text_field :alias, class: "form-control" %></div>
  <div class="col-md-auto">
<%= f.label :title %>
<%= f.text_field :title, class: "form-control" %></div>
  <div class="col-md-auto">
<%= f.label :office %>
<%= f.text_field :office, class: "form-control" %></div>
  <div class="col-md-auto">
<%= f.label :img_url %>
<%= f.text_field :img_url, class: "form-control" %></div>
  <div class="col-md-auto">
<%=f.label :dogs%>
<%= f.collection_select(:dog_id, Dog.all, :id, :name, {prompt: "Select Dog"}, {class: "form-control"})%>
</div></div><br>
<%= f.submit "Submit", :class => "btn btn-success" %>
<%end%>
