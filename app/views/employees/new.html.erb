<%if flash[:message]%>
  <%=flash[:message]%>
<%end%>

<%=form_for @employee do |f| %>
<%=f.label "First Name"%>
<%=f.text_field "first_name"%>
<%=f.label "Last Name"%>
<%=f.text_field "last_name"%>
<%=f.label "Alias"%>
<%=f.text_field "alias"%>
<%=f.label "Title"%>
<%=f.text_field "title"%>
<%=f.label "Office"%>
<%=f.text_field "office"%>
<%=f.label "Image URL"%>
<%=f.text_field "img_url"%>
<%=f.collection_select(:dog_id, @dogs, :id, :name, prompt: true)%>
<%=f.submit "Sumbit"%>
<%end%>
