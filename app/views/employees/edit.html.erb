<% if flash[:message] %>
    <h2><%= flash[:message] %></h2>
<% end %>

<h2>Update Employee Form</h2>

<%= form_for(@employee) do |f| %>
    <%=f.label 'First Name' %>
    <%=f.text_field 'first_name' %>
    <br>
    <%=f.label 'Last Name' %>
    <%=f.text_field 'last_name' %>
    <br>
    <%=f.label 'Alias' %>
    <%=f.text_field 'alias' %>
    <br>
    <%=f.label 'title' %>
    <%=f.text_field 'title' %>
    <br>
    <%=f.label 'office' %>
    <%=f.text_field 'office' %>
    <br>
    <%=f.label 'Image URL' %>
    <%=f.text_field 'img_url' %>
    <br>
    <%= f.label 'Dog' %>
    <%= f.collection_select(:dog_id, Dog.all, :id, :name, prompt: true) %>
    <br>
    <%=f.submit "Update Employee"%>
<% end %>
  