 c<h1> Edit <%=@employee.first_name + " " + @employee.last_name%> Info </h1>

<h2> Edit Form </h2>

<% form_for @employee do |f|%>
<%=f.label "Employee First Name"%>
<%=f.text_field :first_name%>
<%=f.label "Employee Last Name" %>
<%=f.text_field :last_name%>
<%=f.label "Alias" %>
<%=f.text_field :alias%>
<%=f.label "Title"%>
<%=f.text_field :title%>
<%=f.label "Office"%>
<%=f.text_field :office%>
<%=f.label "Image"%>
<%=f.text_field :img_url%>
<%=f.collection_select(:dog_id, Dog.all, :id, :name, prompt: true) %>
<%=f.submit%>
<%end%>
